{
  "name": "Home Scanner",
  "version": "1.0",
  "description": "Search all homes by coordinates",
  "background": {
    "scripts": [
      "background.js",
      "dist/js/jquery-3.4.1.min.js",
      "dist/js/bootstrap.min.js"
    ],
    "persistent": false
  },
  "permissions": ["declarativeContent", "storage", "<all_urls>", "activeTab"],
  "content_scripts": [
    {
      "matches": ["*://*/house-finder.html"],
      "css": ["house-finder.css"],
      "js": ["house-finder.js"]
    },
    {
      "matches": ["*://*/popup.html"],
      "js": ["popup.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "manifest_version": 2
}
